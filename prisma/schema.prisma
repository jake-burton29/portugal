datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

model Example {
    id        String   @id @default(cuid())
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}


model Review {
      id        String   @id @default(cuid())
    createdAt DateTime @default(now())
    
    title String @db.VarChar(40)
    content String
    authorId String 

    @@index([authorId])
 }
 model Booking {
  id          Int      @id @default(autoincrement())
  user        User     @relation(fields: [userId], references: [id])
  userId      Int
  startDate   DateTime
  endDate     DateTime
  status      BookingStatus
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId])
}
model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  bookings  Booking[]
}

enum BookingStatus {
  PENDING
  CONFIRMED
  CANCELLED
}